<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Estados</servlet-name>
        <servlet-class>Servlet.Estados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cidades</servlet-name>
        <servlet-class>Servlet.Cidades</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GravarDadosCidades</servlet-name>
        <servlet-class>Servlet.GravarDadosCidades</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>Servlet.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarUsuario</servlet-name>
        <servlet-class>Servlet.ValidarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Estados</servlet-name>
        <url-pattern>/estados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cidades</servlet-name>
        <url-pattern>/cidades</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GravarDadosCidades</servlet-name>
        <url-pattern>/gravardadoscidades</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/cadastrarusuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarUsuario</servlet-name>
        <url-pattern>/validarusuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
